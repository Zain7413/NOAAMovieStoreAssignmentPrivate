
@{
    ViewData["Title"] = "CheckOut";
}

<form asp-action="Submit" asp-controller="Cart" style="height:500px">
    <div class="col-4" style="margin:30px">
        <label for="inputemail" class="form-label" >Email Address</label>
        <input type="email" name="email" class="form-control" />
        <div id="emailHelp" class="form-text">Enter your email address.</div>
    </div>
    <div class="form-group" style="margin:30px">
        <input type="submit" value="Submit" class="btn btn-primary border-5" />
    </div>

  
</form>

