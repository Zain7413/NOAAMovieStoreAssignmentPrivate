@model List<NOAAMovieStoreAssignment.Models.ViewModels.CartVM>

@{
    ViewData["Title"] = "ShoppingCart";
}

<h1>ShoppingCart</h1>




<section class="h-100 h-custom" style="background-color:#1d3b55">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-8">
                                <div class="p-5">
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                        <h6 class="mb-0 text-muted">@Model.Sum(x => x.Quantity)</h6>
                                    </div>
                                    <hr class="my-4">

                                    @* Items in the cart *@
                                    @foreach (var item in Model)
                                    {
                                        <div class="row mb-4 d-flex justify-content-between align-items-center">
                                            <div class="col-md-2 col-lg-2 col-xl-2">
                                                <img src="@item.Image" alt="PictureUrl" width="300" height="200"
                                                 class="img-fluid rounded-3">
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-3">
                                                <h6 class="text-muted">@item.Title</h6>
                                                <h6 class="text-black mb-0">@item.Price</h6>
                                            </div>
                                            @*Increase and decrease btn*@

                                            <div class="col-md-3 col-lg-3 col-xl-2 d-flex" style="width:125px" >
                                             
                                                <a class="btn btn-primary px-2 " style="positi" asp-action="DecreaseBtn" asp-controller="Cart" asp-route-id="@item.Id">

                                                    -

                                                </a>
                                               
                                                <input readonly id="form1" min="0" name="quantity" value="@item.Quantity" type="number"
                                                   class="form-control form-control-sm" style="text-align:center"/>
                                               

                                                @*<a class="btn btn-link px-2" href="@Url.Action("AddToCart","Cart")"
                                               onclick="this.parentNode.querySelector('input[type=number]').stepUp()" >*@
                                                <a class="btn btn-primary px-2" asp-action="IncreaseBtn" asp-controller="Cart" asp-route-id="@item.Id" asp-route-returnurl="/Cart/ShoppingCart">
                                                    
                                                  + 
                                                    
                                                </a>

                                               

                                            </div>
                                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                <h6 class="mb-0">@item.Total.ToString("C")</h6>
                                            </div>
                                            <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                <a asp-action="RemoveBtn" asp-controller="Cart" asp-route-id="@item.Id" class="text-muted"><i class="fas fa-times"></i></a>
                                            </div>
                                        </div>
                                    }


                                    <hr class="my-4">

                                    <div class="pt-5">
                                        <h6 class="mb-0">
                                            <a href="@Url.Action("index","home")" class="text-body">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop
                                            </a>
                                        </h6>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-4 bg-grey">
                                <div class="p-5">
                                    <h3 class="fw-bold mb-5 mt-2 pt-1">Order Summary</h3>
                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4">
                                        <h5 class="text-uppercase">@Model.Sum(x => x.Quantity)</h5>
                                        <h5>@Model.Sum(x => x.Total)</h5>
                                    </div>

                                    <h5 class="text-uppercase mb-3">Shipping</h5>

                                    <div class="mb-4 pb-2">
                                        <select class="select">
                                            <option value="1">Standard-Delivery- $5.00</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                            <option value="4">Four</option>
                                        </select>
                                    </div>

                                    

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-5">
                                        <h5 class="text-uppercase">Sub Total</h5>
                                        <h5>@Model.Sum(x => x.Price * x.Quantity)</h5>
                                    </div>

                                    @*<a asp-action="CheckOut" asp-controller="Cart" asp-route-action="" type="button" class="btn btn-dark btn-block btn-lg"
                                            data-mdb-ripple-color="dark">
                                        Register
                                    </a>*@
                                     <a href="@Url.Action("CheckOut","Cart")" type="button" class="btn btn-dark btn-block btn-lg"
                                            data-mdb-ripple-color="dark">
                                        Register
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
